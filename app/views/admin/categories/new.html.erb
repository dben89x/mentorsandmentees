<div class="container">
  <h1>New Category</h1>

  <%= simple_form_for(@category, url: admin_categories_path, method: :post, html: { class: 'form-horizontal' }) do |f| %>
    <div class="short-input">
      <%= f.input :name %>
    </div>

    <%= f.submit "Create", class: "btn btn-default submit" %>
  <% end %>
</div>
